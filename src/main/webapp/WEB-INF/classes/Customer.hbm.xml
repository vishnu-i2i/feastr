<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 

<hibernate-mapping>
    <class name = "com.ideas2it.feastr.model.Customer" table = "customer">
    <id name = "customerId" column ="id" type = "string" length = "10"></id>
    <property name="firstName" column ="first_name" type = "string" length = "20"/>
    <property name="lastName" column ="last_name" type = "string" length = "20"/>
    <property name="phoneNumber" column ="phone_number" type = "string" unique = "true" length = "10"/>
    <property name="mailId" column ="mail_id" type = "string" length = "30"/>
    <property name="dob" column ="date_of_birth" type = "string" length = "10"/>
    <property name="status" column ="status"  type = "boolean" />
    <property name="role" column ="role"  type = "string" length = "10"/>
    <property name="createdDate" column ="created"  type = "date"/>
    <property name="updatedDate" column ="updated" type = "date"/>
    
    <list name ="addresses" table = "address" lazy = "false" cascade="all" >
        <key  column = "customer_id" not-null = "false" />
        <list-index column = "list_index"/>
        <one-to-many class="com.ideas2it.feastr.model.Address"/>
    </list>
    </class> 

</hibernate-mapping>
